<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="gameStackPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="gameView" fitHeight="405.0" fitWidth="600.0" pickOnBounds="true">
         <image>
            <Image url="@images/snake_background.jpg" />
         </image>
      </ImageView>
      <Pane fx:id="snakeCanvas" prefHeight="200.0" prefWidth="200.0" />
      <Canvas fx:id="eatableCanvas" height="400.0" layoutX="10.0" layoutY="10.0" width="600.0" />
      <Label fx:id="scoreLabel" text="SCORE" StackPane.alignment="TOP_CENTER">
         <StackPane.margin>
            <Insets top="10.0" />
         </StackPane.margin>
      </Label>
      <VBox fx:id="vBoxPausedGame" alignment="TOP_CENTER" focusTraversable="true" prefHeight="400.0" prefWidth="325.0" spacing="30.0" StackPane.alignment="TOP_CENTER">
         <children>
            <Label fx:id="pausedGameLabel" text="GAME IS PAUSED">
               <font>
                  <Font size="31.0" />
               </font>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="btnResume" minWidth="100.0" mnemonicParsing="false" onAction="#onResume" text="RESUME" />
            <Button fx:id="btnMainMenu" layoutX="10.0" layoutY="10.0" minWidth="100.0" mnemonicParsing="false" onAction="#onMainMenu" text="MAIN MENU" />
            <Button fx:id="btnExit" layoutX="10.0" layoutY="35.0" minWidth="100.0" mnemonicParsing="false" onAction="#onExit" text="EXIT" />
         </children>
      </VBox>
   </children>
</StackPane>
